<h1>Register</h1>
<form action="/users/register" method="POST">
    <body>
    <label for="first_name">Nombre:</label><br>
        <input type="text" name="name" id="name" value="<%= locals.old && old.first_name %>"><br>
        <% if (locals.errors && errors.first_name) { %>
            <p class = "feedback"><%=errors.first_name.msg%></p><br>
            <% } %>

        <label for="email">Correo electrónico:</label><br>
        <input type="email" name="email" id="email" value="<%= locals.old && old.email %>">
        <% if (locals.errors && errors.email) { %>
            <p class = "feedback"><%=errors.email.msg%></p><br>
            <% } %>
        <br>
        <label for="password">Contraseña:</label><br>
        <input type="password" name="password" id="password" value="<%= locals.old && old.password %>"><br>
        <% if (locals.errors && errors.password) { %>
            <p class = "feedback"><%=errors.password.msg%></p><br>
            <% } %>
        <button type="submit">Registrarse</button><br>
        </form>        
  </body>
<h1>Login</h1>
<form action="/users/login" method="POST">
    <body>
        <label for="email">Correo electrónico:</label><br>
        <input type="email" name="email" id="email" value="<%= locals.old && old.email %>">
        <% if (locals.errors && errors.email) { %>
            <p class = "feedback"><%=errors.email.msg%></p><br>
            <% } %>
        <br>
        <label for="password">Contraseña:</label><br>
        <input type="password" name="password" id="password" value="<%= locals.old && old.password %>"><br>
        <% if (locals.errors && errors.password) { %>
            <p class = "feedback"><%=errors.password.msg%></p><br>
            <% } %>
        <button type="submit">Loguearse</button><br>
        </form>        
  </body>